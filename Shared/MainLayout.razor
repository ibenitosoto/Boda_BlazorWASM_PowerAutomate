@inherits LayoutComponentBase
@using Boda_BlazorWASM_PowerAutomate.Components;

<MudThemeProvider Theme="BodaTheme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="0">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudSpacer />
        <MudText Class="ma-7 pa-2 hellovalentica" Color="Color.Inherit" Align="Align.Center" Typo="Typo.h5">M Isabel y Nacho</MudText>
        <MudSpacer/>
        <MudIconButton Icon="@Icons.Material.Filled.Home" Color="Color.Inherit" href="#"/>
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="1">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">Secciones</MudText>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    MudTheme BodaTheme = new MyMudTheme();

}