            </AnimateOnScroll>
        </MudContainer>

        <div id="confirmationButton" class="d-flex align-center justify-center mt-5 mb-5">
            <AnimateOnScroll Animation="Animations.SlideInUp" AnimationDuration="TimeSpan.FromSeconds(1)" AnimationDelay="TimeSpan.FromSeconds(0.6)">
                <MudButton OnClick="ConfirmAttendance" StartIcon="@Icons.Material.Filled.RocketLaunch" EndIcon="@Icons.Material.Filled.RocketLaunch" Variant="Variant.Filled" Size="Size.Large" Color="Color.Secondary">CONFIRMO</MudButton>
            </AnimateOnScroll>
        </div>
    </MudItem>

    <MudItem xs="12">
        <MudContainer Class="mt-4 container text-overlay flex-column align-center justify-center mud-width-full">
            <img src="/images/rama4.svg" alt="Vector Image" class="rama5 rama6">
            <img src="/images/rama4.svg" alt="Vector Image" class="rama5">
        </MudContainer>
    </MudItem>

    <MudItem xs="12">
        <MudContainer Class="flex-column align-center justify-center mud-width-full">
            <div class="container">
                <AnimateOnScroll Animation="Animations.SlideInUp" AnimationDuration="TimeSpan.FromSeconds(1)">
                    <div class="vertical-line longline"></div>
                </AnimateOnScroll>
            </div>
        </MudContainer>
    </MudItem>


    @if (IsAttendanceConfirmed)
    {

        <MudItem Class="mt-2" xs="12">
            <AnimateOnScroll Animation="Animations.SlideInUp" AnimationDuration="TimeSpan.FromSeconds(1)" AnimationDelay="TimeSpan.FromSeconds(1)">
                <MudText Class="mt-6 adelia" Color="Color.Secondary" Align="Align.Center" Typo="Typo.h2">@genial</MudText>
            </AnimateOnScroll>

            <AnimateOnScroll Animation="Animations.SlideInUp" AnimationDuration="TimeSpan.FromSeconds(1)" AnimationDelay="TimeSpan.FromSeconds(1)">
                <MudText Class="mt-10 dayroman" Color="Color.Primary" Align="Align.Center" Typo="Typo.h4">Danos algunos datos para confirmar tu asistencia</MudText>
            </AnimateOnScroll>

            <AnimateOnScroll Animation="Animations.SlideInUp" AnimationDuration="TimeSpan.FromSeconds(1)" AnimationDelay="TimeSpan.FromSeconds(1)">
                <MudRadioGroup Class="mt-6" T="string" @bind-SelectedOption="@SelectedOptionAcompañante" Required="true" RequiredError="Por favor di si vienes sola/o o con pareja!">
                    <MudRadio Class="quicksandBold align-center justify-center mud-width-full" Option="@("Option1")">Voy SIN acompañante</MudRadio>
                    <MudRadio Class="quicksandBold align-center justify-center mud-width-full" Option="@("Option2")">Voy CON acompañante</MudRadio>
                </MudRadioGroup>
            </AnimateOnScroll>

            <MudItem xs="12">
                <MudContainer Class="mt-8 flex-column align-center justify-center mud-width-full">
                    <div class="container">
                        <AnimateOnScroll Animation="Animations.SlideInUp" AnimationDuration="TimeSpan.FromSeconds(0.5)">
                            <div class="vertical-line"></div>
                        </AnimateOnScroll>
                    </div>
                </MudContainer>
            </MudItem>

            <MudItem xs="12">
                <MudContainer Class="mt-4 container text-overlay flex-column align-center justify-center mud-width-full">
                    <img src="/images/rama3.svg" alt="Vector Image" class="rama7">
                    <img src="/images/rama3.svg" alt="Vector Image" class="rama7 rama8">
                </MudContainer>
            </MudItem>

            @if (IsAttendanceConfirmed && SelectedOptionAcompañante == "Option1")
            {
                <AnimateOnScroll Animation="Animations.SlideInUp" AnimationDuration="TimeSpan.FromSeconds(1)" AnimationDelay="TimeSpan.FromSeconds(1)">
                    <MudText Class="mt-6 hellovalentica" Color="Color.Primary" Align="Align.Center" Typo="Typo.h3">tus datos</MudText>
                </AnimateOnScroll>
                <AnimateOnScroll Animation="Animations.SlideInUp" AnimationDuration="TimeSpan.FromSeconds(1)" AnimationDelay="TimeSpan.FromSeconds(1)">
                    <FormAsistencia Id="tusDatosForm"></FormAsistencia>
                </AnimateOnScroll>
            }
            else if (IsAttendanceConfirmed && SelectedOptionAcompañante == "Option2")
            {
                <AnimateOnScroll Animation="Animations.SlideInUp" AnimationDuration="TimeSpan.FromSeconds(1)" AnimationDelay="TimeSpan.FromSeconds(1)">
                    <MudText Class="mt-6 quicksandBold" Color="Color.Primary" Align="Align.Center" Typo="Typo.h5">tus datos</MudText>
                </AnimateOnScroll>
                <AnimateOnScroll Animation="Animations.SlideInUp" AnimationDuration="TimeSpan.FromSeconds(1)" AnimationDelay="TimeSpan.FromSeconds(1)">
                    <FormAsistencia Id="tusDatosForm"></FormAsistencia>
                </AnimateOnScroll>
                <AnimateOnScroll Animation="Animations.SlideInUp" AnimationDuration="TimeSpan.FromSeconds(1)" AnimationDelay="TimeSpan.FromSeconds(1)">
                    <MudText Class="mt-6 quicksandBold" Color="Color.Primary" Align="Align.Center" Typo="Typo.h5">datos acompañante</MudText>
                </AnimateOnScroll>
                <AnimateOnScroll Animation="Animations.SlideInUp" AnimationDuration="TimeSpan.FromSeconds(1)" AnimationDelay="TimeSpan.FromSeconds(1)">
                    <FormAsistencia Id="tusDatosForm"></FormAsistencia>
                </AnimateOnScroll>
            }


        </MudItem>
    }
</MudGrid>




