@code {
    bool success;
    string[] errors = { };
    MudTextField<string> pwField1;
    MudForm form;

    public bool IsAttendanceConfirmed { get; set; } = false;
    public string SelectedOptionAcompañante { get; set; }

    MudDatePicker _picker;
    DateTime? date;
    DateTime weddingDate = new System.DateTime(2024, 04, 20);

    private void ConfirmAttendance()
    {
        IsAttendanceConfirmed = true;

    }

    private string genial;


    protected override async Task OnInitializedAsync()
    {
        // Get the user's preferred language from the browser
        var userLanguage = System.Globalization.CultureInfo.CurrentCulture.Name;

        genial = userLanguage.StartsWith("es") ? "¡Genial!" : "Great!";


    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await ScrollToElement("confirmationButton", 2000);
        }

        if (!firstRender && IsAttendanceConfirmed)
        {
            ScrollToBottom();
        }

        if (!firstRender && SelectedOptionAcompañante != null)
        {
            await ScrollToElement("tusDatosForm", 2000);

        }
    }

    private async Task ScrollToBottom()
    {
        await JSRuntime.ScrollToBottom();
    }

    private async Task ScrollByPixels()
    {
        await JSRuntime.ScrollByPixels();
    }

    private async Task ScrollToElement(string elementToScrollId, int scrollDuration)
    {
        await JSRuntime.InvokeVoidAsync("scrollToElement", elementToScrollId, scrollDuration);
    }



}

